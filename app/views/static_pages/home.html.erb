<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= link_to "Create post", new_post_path, class: "btn btn-primary" %>
      </section>
    </aside>
    <div class="span8">
      <h3>Post Feed</h3>
      <%= render @posts %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to my Blog</h1>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>
  
<% end %>